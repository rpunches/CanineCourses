@model IEnumerable<FinalProject.DATA.EF.Course>

@{
    ViewBag.Title = "Courses";
}

<div class="row">
    <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12">
        <div class="post-media wow fadeIn">
            <img src="~/Content/images/OptimusLogo.png" alt="Optimus" class="img-fluid img-rounded Optimus">
        </div>
    </div>

    <div class="container tbMargin">
        <h2>@ViewBag.Title</h2>
        @if (User.IsInRole("Admin"))
        {
            <p>
                @Html.ActionLink("Create a new Course", "Create")
            </p>
        }
            <div class="row">
                @foreach (var item in Model)
                {



                    <div class="col-lg-3 col-md-6 col-12">
                        <div class="course-item">
                            <div class="course-br">
                                <div class="course-title">
                                    <h2>
                                        <a href="@Url.Action("Details", new { id = item.CourseId })">
                                            @Html.DisplayFor(modelItem => item.CourseName)
                                        </a>
                                    </h2>
                                </div>
                                <div class="course-desc">
                                    @*@Html.DisplayNameFor(model => model.CourseDescription)*@
                                    <p>  @Html.DisplayFor(modelItem => item.CourseDescription) </p>
                                </div>
                                <div class="activeBox">
                                    @if (item.IsActive == true)
                                    {
                                        <p>Course Available</p>
                                    }
                                    else
                                    {
                                        <p style="color: red;">Course Unavailable</p>
                                    }

                                    @*@Html.DisplayNameFor(model => model.IsActive)
                                    @Html.DisplayFor(modelItem => item.IsActive)*@
                                </div>
                            </div>
                            <div class="course-meta-bot">
                                <ul>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li>  @Html.ActionLink("Edit", "Edit", new { id = item.CourseId }) </li>
                                        <li>|</li>
                                        <li> @Html.ActionLink("Delete", "Delete", new { id = item.CourseId })</li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div><!-- end col -->
                }
            </div>
        </div>

</div>