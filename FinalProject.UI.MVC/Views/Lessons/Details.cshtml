        //    i = Math.floor(Math.random() * imgs.length);
        //$('.Mus').append("<img src='" + path + imgs[i] + "'>").hide().fadeIn(2000);
       
        function range(start, end) {
            var myArray = [];
            for (var i = start; i <= end; i += 1) {
                myArray.push(i);
            }
            return myArray;
        };
        var path = '/Content/images/handlers/h',
            //imgs = new Array();
            imgs = range(1, 11),
            i = Math.floor(Math.random() * imgs.length);
        $('.lessonPic').append("<img src='" + path + i + ".jpg'>").hide().fadeIn(2000);

    </script>
}


