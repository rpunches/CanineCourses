@model FinalProject.DATA.EF.Lesson

@{
    ViewBag.Title = Model.LessonTitle;
}
<div class="container tbMargin">
    <h2>@ViewBag.Title</h2>
   
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Cours.CourseName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cours.CourseName)
        </dd>
        <hr />


        <div class="row centerRow">
            <div class="col-lg-6 col-md-11 col-sm-11">
                <dd>
                    @Html.DisplayFor(model => model.Introduction)
                </dd>
                @if (Model.VideoURL != null)
                {

                    <dd>
                        <div class="blog-button">
                            <a class="hover-btn-new orange" data-fancybox href="@Html.DisplayFor(model => model.VideoURL)" target="_blank" value="ViewVideo"><span>View Video<span></a>
                        </div>
                    </dd>
                }

                @if (Model.PdfFileName != null)
                {
                    <dd>
                        <div class="blog-button">
                            <a class="hover-btn-new orange" href="~/Content/lessons/@Html.DisplayFor(model => model.PdfFileName)" target="_blank" value="ViewPDF"><span>View File</span></a>
                        </div>
                    </dd>
                }
            </div>
            <div class="col-lg-5 col-md-11 col-sm-11 lessonPic img-fluid img-rounded"></div>
        </div>
    </dl>

    <p>
        @if (User.IsInRole("Admin"))
        {
            @Html.ActionLink("Edit", "Edit", new { id = Model.LessonId }) @:|
        }
        @Html.ActionLink("Back to Lessons", "Index")
    </p>
</div>

